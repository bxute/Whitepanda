<?xml version="1.0" encoding="utf-8"?>
<com.stepstone.stepper.StepperLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/stepperLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:ms_tabNavigationEnabled="false"
    app:ms_backButtonText=""
    app:ms_backButtonColor="#00000000"
    app:ms_nextButtonColor="@color/colorAccent"
    app:ms_completeButtonColor="@color/colorAccent"
    app:ms_showErrorStateEnabled="true"
    app:ms_stepperType="tabs"
    app:theme="@style/AppTheme"
    app:ms_stepperFeedbackType="tabs|content|disabled_bottom_navigation"/>

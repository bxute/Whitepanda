<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#ffffff"
    tools:context="com.whitepanda.activity.RegisterActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:padding="36dp"
            android:textColor="@color/colorAccent"
            android:textSize="24sp"
            android:gravity="center_horizontal"
            android:text="REGISTER"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:weightSum="8"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <TextView
                android:textSize="24sp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/colorAccent"
                android:id="@+id/userNameCaption"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/usernameEditBox"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/input_box_bg"
                android:textColorHint="#cccccc"
                android:ems="10"
                android:maxLines="1"
                android:layout_marginRight="8dp"
                android:textColor="@color/colorAccent"
                android:paddingStart="24dp"
                android:hint="Username"
                android:inputType="textEmailAddress"
                android:paddingLeft="24dp" />

        </LinearLayout>

        <TextView
            android:textColor="#d15858"
            android:paddingBottom="8dp"
            android:paddingRight="24dp"
            android:layout_gravity="end"
            android:id="@+id/username_error"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:weightSum="8"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <TextView
                android:textSize="24sp"
                android:gravity="center"
                android:text=""
                android:id="@+id/emailCaption"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/emailEditBox"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/input_box_bg"
                android:textColorHint="#cccccc"
                android:ems="10"
                android:maxLines="1"
                android:layout_marginRight="8dp"
                android:textColor="@color/colorAccent"
                android:paddingStart="24dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="24dp" />

        </LinearLayout>

        <TextView
            android:textColor="#d15858"
            android:paddingRight="24dp"
            android:layout_gravity="end"
            android:id="@+id/email_error"
            android:textSize="12sp"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:weightSum="8"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <TextView
                android:textSize="24sp"
                android:gravity="center"
                android:text=""
                android:id="@+id/passwordCaption"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/passwordEditBox"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:background="@drawable/input_box_bg"
                android:ems="10"
                android:maxLines="1"
                android:layout_marginRight="8dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingStart="24dp"
                android:textColor="@color/colorAccent"
                android:textColorHint="#cccccc"
                android:paddingLeft="24dp" />

        </LinearLayout>

        <TextView
            android:textColor="#d15858"
            android:paddingRight="24dp"
            android:layout_gravity="end"
            android:id="@+id/password_error"
            android:textSize="12sp"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:weightSum="8"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <TextView
                android:textSize="24sp"
                android:gravity="center"
                android:text=""
                android:id="@+id/cnfPasswordCaption"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/cnfPasswordEditBox"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/input_box_bg"
                android:textColorHint="#cccccc"
                android:ems="10"
                android:maxLines="1"
                android:layout_marginRight="8dp"
                android:textColor="@color/colorAccent"
                android:paddingStart="24dp"
                android:hint="Re-Enter Password"
                android:paddingLeft="24dp" />

        </LinearLayout>

        <TextView
            android:textColor="#d15858"
            android:paddingRight="24dp"
            android:layout_gravity="end"
            android:id="@+id/cnf_password_error"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:layout_gravity="center_horizontal"
            android:id="@+id/register_terms_condition_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I agree to terms and conditions"
            android:layout_marginTop="21dp"/>

        <TextView
            android:layout_gravity="center_horizontal"
            android:elevation="2dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="56dp"
            android:paddingRight="56dp"
            android:textColor="#ffffff"
            android:background="@drawable/whitepanda_green_btn"
            android:id="@+id/registerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Register On Whitepanda" />

        <TextView
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:paddingLeft="36dp"
            android:paddingRight="36dp"
            android:paddingTop="8dp"
            android:id="@+id/loginBtn"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorAccent"
            android:text="Login"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:text="Already Have an Account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>

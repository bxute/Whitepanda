<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingTop="144dp"
    tools:context="com.whitepanda.activity.ResetPasswordActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="8"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/otpCaption"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="@color/colorAccent"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/otpEditBox"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6.02"
            android:background="@drawable/input_box_bg"
            android:ems="10"
            android:gravity="center"
            android:hint="OTP"
            android:inputType="number"
            android:maxLength="6"
            android:layout_marginRight="8dp"
            android:paddingStart="24dp"
            android:textColor="@color/colorAccent"
            android:textColorHint="#cccccc"
            android:paddingLeft="24dp" />

    </LinearLayout>

    <TextView
        android:textColor="#d15858"
        android:paddingRight="24dp"
        android:layout_gravity="end"
        android:id="@+id/otp_error"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="8"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/passwordCaption"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="@color/colorAccent"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/passwordEditBox"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="@drawable/input_box_bg"
            android:ems="10"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:hint="New Password"
            android:inputType="textPassword"
            android:paddingStart="24dp"
            android:textColor="@color/colorAccent"
            android:textColorHint="#cccccc"
            android:paddingLeft="24dp" />

    </LinearLayout>

    <TextView
        android:textColor="#d15858"
        android:paddingRight="24dp"
        android:layout_gravity="end"
        android:id="@+id/password_error"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:weightSum="8"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">

        <TextView
            android:textSize="24sp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/colorAccent"
            android:id="@+id/cnfPasswordCaption"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/cnfPasswordEditBox"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="@drawable/input_box_bg"
            android:ems="10"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:hint="Re-Enter Password"
            android:inputType="textPassword"
            android:paddingStart="24dp"
            android:textColor="@color/colorAccent"
            android:textColorHint="#cccccc"
            android:paddingLeft="24dp" />

    </LinearLayout>
    <TextView
        android:textColor="#d15858"
        android:paddingRight="24dp"
        android:layout_gravity="end"
        android:id="@+id/cnf_password_error"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <TextView
        android:layout_gravity="center_horizontal"
        android:elevation="2dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="56dp"
        android:paddingRight="56dp"
        android:textColor="#ffffff"
        android:background="@drawable/whitepanda_green_btn"
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Reset Password" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fefefe"
    tools:context="com.whitepanda.activity.EmailVerificationActivity"
    android:weightSum="1">

    <TextView
        android:layout_marginTop="144dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_overlay"
        android:gravity="center"
        android:text="Check your email for OTP" />

    <EditText
        android:id="@+id/otpEditBox"
        android:layout_width="144dp"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:background="@drawable/input_box_bg"
        android:ems="10"
        android:hint="OTP"
        android:inputType="number"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textColorHint="#cccccc"
        android:layout_weight="0.00" />

    <TextView
        android:id="@+id/otpError"
        android:visibility="invisible"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#d15858"
        android:gravity="center"
        android:text="Invalid OTP !" />

    <TextView
        android:visibility="invisible"
        android:id="@+id/msg"
        android:textColor="@color/colorAccent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="48dp"
        android:text="Sent Successfully"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:enabled="false"
        android:layout_gravity="center_horizontal"
        android:elevation="2dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="56dp"
        android:paddingRight="56dp"
        android:textColor="#ffffff"
        android:background="@drawable/whitepanda_green_btn"
        android:id="@+id/verifyOtpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Verify OTP" />


    <TextView
        android:background="?selectableItemBackground"
        android:id="@+id/resend_otp_btn"
        android:layout_gravity="center_horizontal"
        android:text="Resend OTP"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:padding="8dp"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content" />


    <TextView
        android:background="?selectableItemBackground"
        android:id="@+id/logout_btn"
        android:layout_gravity="center_horizontal"
        android:text="LogOut"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:padding="8dp"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content" />


</LinearLayout>

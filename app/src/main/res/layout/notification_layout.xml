<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:padding="4dp"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:padding="8dp"
        fresco:placeholderImage="@drawable/profile_placeholder"
        fresco:roundAsCircle="true"
        fresco:actualImageScaleType="centerCrop"
        android:id="@+id/notification_actor_pic"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/notification_icon"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:paddingLeft="4dp"
        android:paddingTop="2dp"
        android:text="icon"
        android:layout_toRightOf="@+id/notification_actor_pic"
        android:layout_below="@+id/notification_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/notification_content"
        android:paddingTop="6dp"
        android:paddingLeft="4dp"
        android:lines="2"
        android:layout_toRightOf="@+id/notification_actor_pic"
        android:text="Ankit commented on your post\Ankit commented on you comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/time"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:paddingTop="4dp"
        android:paddingLeft="4dp"
        android:text="2 hrs ago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notification_content"
        android:layout_toRightOf="@+id/notification_icon"
        android:layout_toEndOf="@+id/notification_icon" />


</RelativeLayout>

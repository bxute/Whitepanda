<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Google Inc."
        android:id="@+id/user_profile_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Senior Analyst Search"
        android:layout_below="@+id/user_profile_company"
        android:id="@+id/user_profile_work_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="California NYC"
        android:layout_below="@+id/user_profile_work_position"
        android:id="@+id/user_profile_work_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="2000/02/23 - still"
        android:layout_below="@+id/user_profile_work_location"
        android:id="@+id/user_profile_work_work_tenure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Work Description"
        android:layout_below="@+id/user_profile_work_work_tenure"
        android:id="@+id/user_profile_work_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>